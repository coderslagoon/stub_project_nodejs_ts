{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "build/out",
    "sourceMap": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": [ "*", "src/*" ]
    }
  },
  "include": [
    "./src"
  ]
}
